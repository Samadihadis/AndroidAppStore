<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootItemMediumDetailStyleLayout"
    android:background="?attr/selectableItemBackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mediumDetailStyleImageView"
        android:layout_width="210dp"
        android:layout_height="110dp"
        android:src="@drawable/baseline_apps_24"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mediumDetailStyleTitleTextView"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mediumDetailStyleTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="10dp"
        android:maxLength="20"
        android:textColor="#121212"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/mediumDetailStyleImageView"
        app:layout_constraintStart_toStartOf="@+id/mediumDetailStyleImageView"
        app:layout_constraintTop_toBottomOf="@+id/mediumDetailStyleImageView"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mediumDetailStyleDownloadsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:maxLength="20"
        android:textColor="#121212"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/mediumDetailStyleTitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/mediumDetailStyleTitleTextView"
        tools:text="Downloads" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mediumDetailStyleRatingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#121212"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/mediumDetailStyleDownloadsTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Rating" />

</androidx.constraintlayout.widget.ConstraintLayout>