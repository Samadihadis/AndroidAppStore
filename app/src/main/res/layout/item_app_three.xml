<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootItemThreeAppLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemThreeAppBannerImageView"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/banner_image_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemThreeAppIconImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/baseline_apps_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemThreeAppBannerImageView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/itemThreeAppTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:maxLength="20"
        android:textColor="#121212"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/itemThreeAppDescriptionTextView"
        app:layout_constraintEnd_toStartOf="@id/itemThreeAppRatingTextView"
        app:layout_constraintStart_toEndOf="@+id/itemThreeAppIconImageView"
        app:layout_constraintTop_toTopOf="@id/itemThreeAppIconImageView"
        app:layout_constraintVertical_chainStyle="spread"
        tools:text="Title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/itemThreeAppRatingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="#121212"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/itemThreeAppTitleTextView"
        app:layout_constraintBottom_toBottomOf="@id/itemThreeAppTitleTextView"
        tools:text="Rating" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/itemThreeAppDescriptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:lines="2"
        android:textColor="#121212"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/itemThreeAppIconImageView"
        app:layout_constraintEnd_toStartOf="@id/installButton"
        app:layout_constraintStart_toEndOf="@id/itemThreeAppIconImageView"
        app:layout_constraintTop_toBottomOf="@id/itemThreeAppTitleTextView"
        tools:text="Description" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/installButton"
        android:layout_width="72dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#8E94B3"
        android:text="Install"
        android:textSize="12sp"
        android:insetRight="0dp"
        android:insetLeft="0dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/itemThreeAppDescriptionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemThreeAppRatingTextView"
        app:layout_constraintTop_toTopOf="@id/itemThreeAppDescriptionTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>