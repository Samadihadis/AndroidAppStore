<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootItemMediumDetailStyleLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/mediumDetailStyleImageView"
        android:layout_width="210dp"
        android:layout_height="110dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="4dp"
        android:background="@color/shimmer"
        app:layout_constraintBottom_toTopOf="@+id/mediumDetailStyleTitleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/mediumDetailStyleTitleTextView"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="10dp"
        android:background="@color/shimmer"
        app:layout_constraintEnd_toEndOf="@+id/mediumDetailStyleImageView"
        app:layout_constraintStart_toStartOf="@+id/mediumDetailStyleImageView"
        app:layout_constraintTop_toBottomOf="@+id/mediumDetailStyleImageView"
        app:layout_constraintVertical_chainStyle="packed" />

    <View
        android:id="@+id/mediumDetailStyleCategoryTextView"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@color/shimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mediumDetailStyleTitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/mediumDetailStyleTitleTextView" />

    <View
        android:id="@+id/mediumDetailStyleRatingTextView"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginVertical="4dp"
        android:layout_marginEnd="16dp"
        android:background="@color/shimmer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mediumDetailStyleCategoryTextView"
        app:layout_constraintTop_toBottomOf="@id/mediumDetailStyleCategoryTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>