<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootItemBoxStyleLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/boxStyleIconImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="8dp"
        android:background="@color/shimmer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/boxStyleTitleTextView"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:background="@color/shimmer"
        android:lines="1"
        android:textColor="#121212"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/boxStyleDescriptionTextView"
        app:layout_constraintStart_toEndOf="@id/boxStyleIconImageView"
        app:layout_constraintTop_toTopOf="@id/boxStyleIconImageView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/boxStyleDescriptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:background="@color/shimmer"
        android:lines="1"
        android:textColor="#121212"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/boxStyleIconImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/boxStyleIconImageView"
        app:layout_constraintTop_toBottomOf="@id/boxStyleTitleTextView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/boxStyleRatingTextView"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/shimmer"
        android:textColor="#121212"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/boxStyleTitleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/boxStyleTitleTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>