<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootItemTwoAppLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemTwoAppIconImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/baseline_apps_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/itemTwoAppTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:lines="1"
        android:textColor="#121212"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/itemTwoAppDescriptionTextView"
        app:layout_constraintStart_toEndOf="@id/itemTwoAppIconImageView"
        app:layout_constraintTop_toTopOf="@id/itemTwoAppIconImageView"
        app:layout_constraintEnd_toStartOf="@id/itemTwoAppRatingTextView"
        app:layout_constraintVertical_chainStyle="spread"
        tools:text="Title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/itemTwoAppDescriptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:lines="1"
        android:textColor="#121212"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemTwoAppIconImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemTwoAppIconImageView"
        app:layout_constraintTop_toBottomOf="@id/itemTwoAppTitleTextView"
        tools:text="Description" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/itemTwoAppRatingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="#121212"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemTwoAppTitleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/itemTwoAppTitleTextView"
        tools:text="Rating" />

</androidx.constraintlayout.widget.ConstraintLayout>